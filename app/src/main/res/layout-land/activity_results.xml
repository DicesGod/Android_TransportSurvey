<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="30sp"
        android:text="@string/textView6"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="23dp"
        style="@style/table_box"
        android:stretchColumns="*"

        app:layout_constraintBottom_toTopOf="@+id/btnReturn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TableRow>
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            <TextView
                android:id="@+id/TypeofTransport"
                style="@style/table_head"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/TypeofTransport" />

            <TextView
                android:id="@+id/BusMetro"
                style="@style/table_head"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="@string/BusMetro" />

            <TextView
                android:id="@+id/PrivateTaxi"
                style="@style/table_head"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="@string/PrivateTaxi" />
        </TableRow>

        <TableRow>
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            <TextView
                android:id="@+id/ClientKm"
                style="@style/table_head"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="@string/ClientKm" />

            <TextView
                android:id="@+id/BusMetro2"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/PrivateTaxi2"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="" />

        </TableRow>

        <TableRow>
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            <TextView
                android:id="@+id/percent"
                style="@style/table_head"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="@string/percent" />

            <TextView
                android:id="@+id/BusMetroPercent"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/PrivateTaxiPercent"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:gravity="center"
                android:text="" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="26dp"
        android:text="Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
</android.support.constraint.ConstraintLayout>